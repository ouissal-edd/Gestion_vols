        function getDay() {
            var today = new Date();
            var dd = String(today.getDate()).padStart(2, "0");
            var mm = String(today.getMonth() + 1).padStart(2, "0");
            var yyyy = today.getFullYear();
            today = yyyy + "-" + mm + "-" + dd;
            return today;
        }

        Today_Date = getDay();

        const date = document.getElementById('datee');
        date.min = Today_Date;
        date.value = Today_Date;
    </script>
